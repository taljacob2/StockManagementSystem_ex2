<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="login"
            stylesheets="@Login.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.pane.resources.login.Login">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <bottom>
                <Button mnemonicParsing="false" text="Button"
                        BorderPane.alignment="CENTER">
                    <font>
                        <Font name="SansSerif Regular" size="15.0"/>
                    </font>
                </Button>
            </bottom>
            <top>
                <FlowPane alignment="CENTER" BorderPane.alignment="CENTER">
                    <children>
                        <Label alignment="CENTER"
                               text="Choose A Profile To Log Into:"
                               textFill="WHITE">
                            <font>
                                <Font name="SansSerif Regular" size="36.0"/>
                            </font>
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0"
                                        top="5.0"/>
                            </FlowPane.margin>
                        </Label>
                    </children>
                </FlowPane>
            </top>
            <left>
                <ComboBox fx:id="comboBox" promptText="Choose a profile"
                          BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </BorderPane.margin>
                </ComboBox>
            </left>
        </BorderPane>
    </children>
</AnchorPane>
